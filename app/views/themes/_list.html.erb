<div class="col-md-12 table-responsive" id="themes-list-<%= group.id %>">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th width="20%">Номер</th>
        <th width="60%">Название</th>
        <th width="10%"></th>
        <th width="10%"></th>
      </tr>
    </thead>
    <tbody>
      <% group.themes.each do |theme| %>
        <tr>
	  <td><%= theme.id %></td>
	  <td><%= theme.name %> (#<%= theme.hashtag %>)</td>
          <td>
            <%= button_to edit_group_theme_path(group, theme), method: :get, remote: true, class: "btn btn-warning btn-xs center-block", data: { toggle: "modal", target: "#addCategory-#{group.id}"} do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <% end %>
          </td>
	  <td>
            <%= button_to group_theme_path(group, theme), method: :delete, class: "btn btn-danger btn-xs center-block", data: { toggle:  "modal" } do %>
              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            <% end %>
	  </td>
	</tr>
      <% end %>
    </tbody>
  </table>
</div>
