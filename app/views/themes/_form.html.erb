<%= form_for [group, @theme], html: { class: "form-horizontal" }, remote: true do |f| %>
  <%= f.hidden_field :id, :value => @theme.id %>
  <%= f.hidden_field :group_id, :value => group.id %>

  <div id="theme-form-errors">
  </div>

  <div class="form-group">
    <div clas="form-group">
      <div class="col-md-12">
	<label for="inputEmail3" class=" control-label">Тема</label>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-12">
	<%= f.text_field :name, class: "form-control", placeholder: "Название" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-12">
        <%= f.text_field :hashtag, class: "form-control", placeholder: "Хэштег" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-121">
	<%= f.submit "Готово", class: "btn btn-default btn-sm" %>
      </div>
    </div>
  </div>
<% end %>
